using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace project0
{
    internal class Account
    {
        public int accNo { get; set; }
        public string accName { get; set; }
        public double accBalance { get; set; }
        public bool accActive { get; set; }
        public string accEmail { get; set; }

        public double Withdraw(int w_amount)
        {
            accBalance = (accBalance - w_amount) - TransactionCharge(w_amount);
            return accBalance;
        }
        public double Deposit(int d_amount)
        {
            accBalance = accBalance + d_amount;
            return accBalance;
        }

        private double TransactionCharge(int amount)
        {
            double tcharge = 0;
            double percent = 15;

            tcharge = amount * percent / 100;

            return tcharge;
        }


    }



}
